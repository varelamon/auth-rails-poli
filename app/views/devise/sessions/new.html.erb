<div class="authform">
  <%= form_for(resource, :as => resource_name, :url => session_path, :html => { :role => 'form'}) do |f| %>
    <h3>Iniciar Sesion</h3>
    <%= devise_error_messages! %>
    <div class="form-group">
      <%= f.label :username %>
      <%= f.text_field :username, :autofocus => true, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%- if devise_mapping.recoverable? %>
        <%= link_to "Olvido ContraseÃ±a?", new_password_path(resource_name), class: 'right' %>
      <% end -%>
      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>
    </div>
      <%= f.submit 'Entrar', :class => 'button right' %>
      <% if devise_mapping.rememberable? -%>
        <div class="checkbox">
          <%= f.check_box :remember_me %> <%= f.label t(:remember_me) %>
        </div>
      <% end -%>
  <% end %>
</div>
